#include <dt-bindings/zmk/matrix_transform.h>
#include <dt-bindings/zmk/input_transform.h> // <<< この一行を追加！
#include <physical_layouts.dtsi>
#include <input/processors.dtsi>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
        // zmk,pointing-device の指定は .overlay ファイルで行います
    };

    // あなたのキー設定をそのまま維持します
    kscan0: kscan {
        compatible = "zmk,kscan-gpio-direct";
        wakeup-source;
        input-gpios
            = <&xiao_d 0 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&xiao_d 1 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&xiao_d 2 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&xiao_d 10 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            ;
    };

    // あなたのキー設定をそのまま維持します
    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        rows = <2>;
        columns = <2>;
        map = <
            RC(0,3) RC(0,2)
            RC(0,1) RC(0,0)
        >;
    };

    // トラックボール機能の「骨格」だけを定義します
    trackball_listener: trackball_listener {
        compatible = "zmk,input-listener";
        // &trackball という名前のデバイスを監視します
        // (デバイス自体は、後で .overlay ファイルで定義します)
        device = <&trackball>;
        
        // デフォルトでは無効にしておき、.overlay ファイルで有効化します
        status = "disabled";

        // センサーの物理的な向きに合わせた軸の入れ替えなど、
        // 基本的な設定はここに書いておくのが一般的です
        input-processors = <&zip_xy_transform INPUT_TRANSFORM_XY_SWAP>;
    };
};